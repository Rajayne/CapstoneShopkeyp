{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 25
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 50
    },
    "profileImage": {
      "type": "string",
      "format": "uri"
    },
    "balance": {
      "type": "integer",
      "minimum": 0
    },
    "isAdmin": {
      "type": "boolean"
    },
    "active": {
      "type": "boolean"
    },
    "dateCreated": {
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "required": [
    "username",
    "password"
  ]
}