{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "itemId": {
      "type": "integer"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 25
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "itemImage": {
      "type": "string",
      "media": {
        "binaryEncoding": "base64",
        "type": "image/png"
      }
    },
    "price": {
      "type": "integer"
    },    
    "stock": {
      "type": "integer"
    },
    "purchasable": {
      "type": "boolean"
    },
    "createdBy": {
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "description",
    "createdBy"
  ]
}